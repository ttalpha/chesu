{
  "compilerOptions": {
    "lib": ["dom", "es2015"],
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "module": "ES2015",
    "target": "ES6",
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "src/**/*.mts"],
  "exclude": ["node_modules", "dist", "lib"]
}
